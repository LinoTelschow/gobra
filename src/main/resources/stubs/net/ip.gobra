package net

// IP address lengths (bytes).
const (
	IPv4len = 4
	IPv6len = 16
)

type IP []byte

pred ValidIP(ip IP) {
	(len(ip) == IPv4len || len(ip) == IPv6len) && forall i int :: 0 <= i && i < len(ip) ==> acc(&ip[i])
}

pred ValidIPMask(ip IPMask) {
	(len(ip) == IPv4len || len(ip) == IPv6len) && forall i int :: 0 <= i && i < len(ip) ==> acc(&ip[i])
}

type IPMask []byte

type IPNet struct {
	IP   IP
	Mask IPMask
}

// IPv4 returns the IP address (in 16-byte form) of the
// IPv4 address a.b.c.d.
ensures ValidIP(res)
func IPv4(a, b, c, d byte) (res IP)

// IPv4Mask returns the IP mask (in 4-byte form) of the
// IPv4 mask a.b.c.d.
ensures ValidIPMask(res)
func IPv4Mask(a, b, c, d byte) (res IPMask)

// CIDRMask returns an IPMask consisting of 'ones' 1 bits
// followed by 0s up to a total length of 'bits' bits.
ensures ValidIPMask(res)
func CIDRMask(ones, bits int) (res IPMask)

